= simple_form_for(@node,:html=>{:class=>'form-horizontal'}) do |f|
  = f.error_notification
  .form-inputs 
    = f.input :name
    = f.input :summary,as: :text
    = f.input :parent_id,as: :hidden
    = f.input :section_id,as: :hidden
  .form-actions                
    = f.button :submit         

